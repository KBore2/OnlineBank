@model IEnumerable<OnlineBankMVC.Domain.Models.Card>

@{
    ViewData["Title"] = "CardsByCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@Model?.Count() > 1)
{
    <h1>@Model?.First().Customer.FirstName Cards</h1>
}
else
{
    <h1>You have no cards</h1>
}


<p>
    <a asp-action="Create" asp-route-customerId="@TempData["customerId"]" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ccv)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ccv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-customerId="@item.CustomerId" asp-route-cardNumber="@item.CardNumber">Edit</a> |
                <a asp-action="Details" asp-route-customerId="@item.CustomerId" asp-route-cardNumber="@item.CardNumber">Details</a> |
                <a asp-action="Delete" asp-route-customerId="@item.CustomerId" asp-route-cardNumber="@item.CardNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>